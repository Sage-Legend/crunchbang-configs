alignment bottom right

#behaviour
update_interval 1

#colour
default_color  000000
#default_shade_color ffffff
own_window_colour ffffff

#font
use_xft yes
xftfont cure:pixelsize=8

#to prevent window from moving
use_spacer no
minimum_size 500 0



